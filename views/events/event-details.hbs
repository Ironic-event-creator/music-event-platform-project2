<header class="row text-center mt-5 mb-5">
  <h1> {{eventDetails.title}} </h1>
  {{#if eventDetails.imageUrl}}
    <div class="">
      <img
        src="{{eventDetails.imageUrl}}"
        class="card-img-top rounded"
        alt="{{eventDetails.title}}"
      />
    </div>
    {{else}}
       <div class="">
      <img
        src="../images/defaultImg.jpeg"
        class="card-img-top rounded"
        alt="default image band"
      />
    </div>
  {{/if}}
</header>




<div class="row text-center">
  <div class="col-12 col-md-6">
    <div class="card mb-3 p-3 details-card">
      <h4 class="bg-dark">{{dateFormat eventDetails.startTime "dddd, MMMM Do YYYY, h:mm a"}}</h4>

      {{#if eventDetails.description}}
        <p class="border-1"><h5>{{eventDetails.style}}: </h5>{{eventDetails.description}}</p>
      {{/if}}
    </div>

    <div class="card mb-3 p-3 details-card">
      <h5>{{eventDetails.location.locationName}}</h5>
      <p>{{eventDetails.location.address}}</p>
      <h6><em>{{eventDetails.location.city}}</em></h6>
    </div>
  </div>

  <div class="col-12 col-md-6">
    <div class="card mb-3 p-3 details-card">
      <form
        action="/events/{{eventDetails._id}}"
        method="post"
        class="form d-inline mt-2"
      >
        <label>Leave your comments about this event here👇
          <input class="form-control mb-2 mt-2" type="text" name="comment" placeholder="Your comment" required/>
          <input class="form-control" type="text" name="commentOwner" value="🎸🥁🎤"/>
          <button type="submit" class="btn btn-dark login-btn mt-4 ">Post it</button>
        </label>
      </form>
      <div>
        {{#if eventDetails.comments}}
          <h5>Comments:</h5>
          {{#each eventDetails.comments}}
          <p class="border-bottom border-2">{{this}}</p>
          {{/each}}
        {{/if}}
      </div>
    </div>
  </div>

  <div class="row text-center buttons-style">
    {{#if eventOwner}}
      <div class="mt-5">
        <form
          action="/events/{{eventDetails._id}}/delete"
          method="POST"
          class="form d-inline"
        >
          <button class="btn btn-dark login-btn me-4">Delete</button>
        </form>
        <form
          action="/edit/{{eventDetails._id}}"
          method="get"
          class="form d-inline"
        >
          <button class="btn btn-dark login-btn ms-4">Update</button>
          <p class="mt-3 light-font">{{eventOwner.message}}</p>
        </form>
      </div>
    {{/if}}
  </div>

</div>