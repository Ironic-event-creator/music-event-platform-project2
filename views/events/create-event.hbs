<h3>Create an event</h3>

<form action="/events-create" method="post">
    <input type="text" class="form-control" name="title" required>

    <div class="form-check">
        <input class="form-check-input" type="radio" name="style" value="Rock">
        <label class="form-check-label">
            Rock
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="style" value="Jazz">
        <label class="form-check-label">
            Jazz
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="style" value="Pop">
        <label class="form-check-label">
            Pop
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="style" value="Blues">
        <label class="form-check-label">
            Blues
        </label>
    </div>
    <label>Description:
        <input type="text" class="form-control" name="description">
    </label>
    <label>Location:
        <input type="text" class="form-control" name="locationName" required>
    </label>
    <label>Address:
        <input type="text" class="form-control" name="address" required>
    </label>
    <label>Date and Time of the Event:
        <input type="datetime-local" name="startTime" required>
    </label>
    <button class="btn btn-danger" type="submit">Submit</button>

</form>